{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h2>Liste de Catégories</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.nom }}</td>
                    <td>
                        <ul>
                            <a href="{{ path('adminCategories_show', { 'id': entity.id }) }}"><i class="icon-laptop"></i></a>
                            <a href="{{ path('adminCategories_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <a href="{{ path('adminCategories_new') }}">
            <i class="icon-desktop"></i> Créer une nouvelle catégorie
        </a>
    </ul>
{% endblock %}
