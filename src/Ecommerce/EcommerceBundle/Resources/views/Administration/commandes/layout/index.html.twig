{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h2>Liste des Commandes</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>N°</th>
                <th>Date</th>
                <th>Référence</th>
                <th>Client</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for commande in commandes %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ commande.date|date('d/m/Y h:i:s') }}</td>
                    <td>{{ commande.reference }}</td>
                    <td>{{ commande.utilisateur.username }}</td>
                    <td>{{ commande.utilisateur.email }}</td>
                    <td>
                        <a href="{{ path('adminShowFacture', { 'id' : commande.id }) }} " title="Télécharger la facture" target="_blank"><i class="icon-download-alt"></i> PDF</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
