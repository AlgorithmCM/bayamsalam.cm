{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h2>Liste des pages</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.titre }}</td>
                    <td>
                        <a href="{{ path('adminPages_show', { 'id': entity.id }) }}"><i class="icon-laptop"></i></a>
                        <a href="{{ path('adminPages_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <a href="{{ path('adminPages_new') }}">
            <i class="icon-desktop"></i> Cr√©er une nouvelle page
        </a>
    </ul>
{% endblock %}
