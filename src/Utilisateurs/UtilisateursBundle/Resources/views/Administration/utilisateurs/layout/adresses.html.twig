{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h2>Adresses du Client</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>N°</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Nom</th>
                <th>Prénom</th>
            </tr>
        </thead>
        <tbody>
            {% for adresse in utilisateur.adresses %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ adresse.adresse }}</td>
                    <td>{{ adresse.ville }}</td>
                    <td>{{ adresse.pays }}</td>
                    <td>{{ adresse.nom }}</td>
                    <td>{{ adresse.prenom }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}