{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h2>Liste des Utilisateurs</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>NÂ°</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for utilisateur in utilisateurs %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ utilisateur.username }}</td>
                    <td>{{ utilisateur.email }}</td>
                    <td>

                        {% if utilisateur.adresses|length != 0 %}
                            <a href="{{ path('adminAdressesUtilisateurs', { 'id': utilisateur.id }) }}" title="Consulter les adresses"><i class="icon-home"></i></a>
                            {% endif %}

                        {% if utilisateur.commandes|length != 0 %}
                            <a href="{{ path('adminFacturesUtilisateurs', { 'id': utilisateur.id }) }}" title="Consulter les factures"><i class="icon-download-alt"></i></a>
                            {% endif %}

                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
